---
import ArrowRightIcon from "../icons/ArrowRight.svg";
import DoubleQuotesIcon from "../icons/double-quotes.svg";
import HeartIcon from "../icons/heart.svg";
---

<section
  class="flex flex-col items-center text-center py-20 px-5 bg-gradient-to-b from-pink-100 to-white"
>
  <div class="relative mb-6 max-w-4xl">
    <h1 class="text-primary font-title text-5xl md:text-7xl font-extrabold">
      Just say goodbye to being thirsty.
    </h1>
    <img
      src="../../public/starts.PNG"
      alt="starts"
      class="absolute hidden md:block md:top-1/2 md:left-1/12"
    />
    <a
      href="#shop"
      class="hidden lg:absolute lg:right-1/6 bottom-0 bg-white border-2 border-primary text-primary font-medium lg:flex items-center px-8 py-3 rounded-full hover:bg-primary hover:text-white transition"
    >
      <span class="pr-3">Drink it Up</span>
      <ArrowRightIcon
        class="absolute right-0 fill-primary w-10 h-10 -rotate-90"
      />
    </a>
  </div>
  <p class="text-lg font-medium text-text mb-8">
    Thirst <strong> quenching</strong> drink made just for you.
  </p>
  <a
    href="#shop"
    class="bg-white lg:hidden border-2 mb-5 border-primary relative text-primary font-medium flex items-center px-8 py-3 rounded-full hover:bg-primary hover:text-white transition"
  >
    <span class="pr-3">Drink it Up</span>
    <ArrowRightIcon
      class="absolute right-0 fill-primary w-10 h-10 -rotate-90"
    />
  </a>
  <div
    class="flex flex-col lg:flex-row lg:justify-around lg:items-end max-w-6xl w-full"
  >
    <img src="../../public/sodas.png" alt="sodas" class="lg:order-1" />
    <section class="flex">
      <section class="w-1/2 space-y-2 lg:w-auto lg:pb-5">
        <DoubleQuotesIcon class="w-8 h-8 lg:mx-10" />
        <div class="relative flex w-max">
          <div
            class="relative z-20 h-10 w-10 lg:h-16 lg:w-16 bg-amber-200 rounded-full"
          >
          </div>
          <div
            class="relative z-10 -left-3 h-10 w-10 lg:h-16 lg:w-16 bg-amber-800 rounded-full"
          >
          </div>
          <div
            class="relative -left-6 h-10 w-10 lg:h-16 lg:w-16 bg-amber-200 rounded-full"
          >
          </div>
        </div>
        <h3 class="text-primary text-xl text-start font-semibold">
          The drink you need this summer"
        </h3>
        <p class="text-start">Product with great taste, and instant energy</p>
      </section>
      <section class="block lg:hidden space-y-2 w-1/2">
        <h3 class="text-text text-lg">The drink of the nation</h3>
        <article class="grid lg:grid-cols-2 justify-items-center gap-2">
          <div
            class="text-primary uppercase bg-option-one w-max p-2 rounded-full"
          >
            Caffeine
          </div>
          <div
            class="text-primary uppercase bg-option-two w-max p-2 rounded-full"
          >
            Citric
          </div>
          <div
            class="text-primary uppercase bg-option-three w-max p-2 rounded-full"
          >
            Lemon
          </div>
          <div
            class="text-primary uppercase bg-option-four w-max p-2 rounded-full"
          >
            Cane Sugar
          </div>
          <div class="hidden h-10 w-10 bg-primary rounded-full col-span-full">
          </div>
        </article>
      </section>
    </section>
    <section
      class="hidden lg:block space-y-2 w-1/2 lg:w-auto lg:pb-5 lg:order-3"
    >
      <img src="../../public/ray.PNG" alt="ray" class="hidden lg:block pl-20" />
      <h3 class="text-text text-lg">The drink of the nation</h3>
      <article
        class="grid lg:grid-cols-2 xl:grid-cols-[1fr_1fr_auto] justify-items-center gap-2"
      >
        <div
          class="text-primary uppercase bg-option-one w-max p-2 rounded-full"
        >
          Caffeine
        </div>
        <div
          class="text-primary uppercase bg-option-two w-max p-2 rounded-full"
        >
          Citric
        </div>
        <div
          class="text-primary uppercase bg-option-three w-max p-2 rounded-full xl:col-start-2 xl:col-end-3"
        >
          Lemon
        </div>
        <div
          class="text-primary uppercase bg-option-four w-max p-2 rounded-full xl:col-start-1 xl:row-start-2"
        >
          Cane Sugar
        </div>
        <div
          class="hidden lg:flex lg:justify-center lg:items-center h-10 w-10 bg-primary rounded-full col-span-full xl:col-start-3 xl:col-end-4 xl:justify-self-start"
        >
          <HeartIcon class="w-8 h-8 fill-pink-600" />
        </div>
      </article>
    </section>
  </div>
</section>
